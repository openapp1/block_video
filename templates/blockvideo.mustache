                                <a class="imgurl" href="{{{source}}}">
                                    {{#imgurl}}<img src="{{{imgurl}}}"/>{{/imgurl}}
                                    {{^imgurl}}<div class="bgimg"></div>{{/imgurl}}
                                </a>
                                <div class="videoname">
                                    <div class="textname">
                                        <a href="{{{source}}}" vidid="{{{id}}}" class="{{#hidden}} hiddenfromstudents {{/hidden}}" title="{{{name}}}"> 
                                            <span>{{{name}}}</span>
                                        </a>
                                    </div>
                                    {{#caneditnamevideo}}
                                    <i vidid="{{{id}}}" show="table" class=" blockvideo_i fa fa-pencil editname"></i>
                                    <i vidid="{{{id}}}" show="table" class="fa {{hiddenclass}} blockvideo_i videovisible"></i>
                                    <form datavideo={{{id}}} show="table" class="formeditname">
                                        <input name="videoname" type="text" value="{{{name}}}"/>
                                    </form>
                                    {{/caneditnamevideo}}</div>
                                <div class="videodate">{{{date}}}</div>
                            </div>
                        {{/videos}}
                        <div id="arrowleftvideos"><i class=" blockvideo_i fal fa-angle-double-{{#dirrtl}}right{{/dirrtl}}{{^dirrtl}}left{{/dirrtl}}"></i></div>
                    </div>
                </div>
            {{/showvideos}}
            {{#showzoomvideos}}
                </br><div id="zoomvideos">
                    <h5 >{{# str }} zoomvideostitle, block_video {{/ str }}
                        {{#canaddlocalvideos}}
                            <a href="{{{wwwroot}}}/blocks/video/choosevideos.php?courseid={{{course}}}">
                                <i class=" blockvideo_i fa fa-plus" aria-hidden="true"></i>
                            </a>
                        {{/canaddlocalvideos}}
                    </h5>
                    <div class="videos">
                        <div id="arrowrightzoomvideos" class="arrowright"><i class="blockvideo_i fal fa-angle-double-{{#dirrtl}}left{{/dirrtl}}{{^dirrtl}}right{{/dirrtl}}"></i></div>
                        {{#zoomvideos}}
                            <div id="{{{id}}}" class="videotableitem" dissearch="true">
                                <a class="imgurl" href="{{{source}}}">
                                    {{#imgurl}}<img src="{{{imgurl}}}"/>{{/imgurl}}
                                    {{^imgurl}}<div class="bgimg"></div>{{/imgurl}}

                                </a>
                                <div class="videoname"><a href="{{{source}}}" title="{{{name}}}">{{{name}}}</a></div>
                                <div class="videodate">{{{date}}}</div>
                            </div>
                        {{/zoomvideos}}
                        <div id="arrowleftzoomvideos"><i class="blockvideo_i fal fa-angle-double-{{#dirrtl}}right{{/dirrtl}}{{^dirrtl}}left{{/dirrtl}}"></i></div>
                    </div>
                </div>
            {{/showzoomvideos}}
        </div>
</div>
